# fibonacci program
proc fib(n: int) : int
  if n < 2 -> fib := 1;
  [] else -> fib := fib(n-1) + fib(n-2);
  fi
end

var f: int

writes "What Fibonacci number to computer?";
f := read;
if (f < 1) + (f > 100) -> write "Invalid: 0 < n < 101"; fi


writes "Factorial of ";
writes str(f);
writes " is ";
writes str(fact(f));
