# iterative factorial program

proc ifact(n: int) : int
  ifact := 1;
  fa k := 2 to n -> ifact := ifact * k; af
end

var f: int

writes "What number to you want to compute the factorial of? ";
f := read;
if (f < 1) + (f > 100) -> write "Invalid: 0 < n < 101"; fi


writes "Factorial of ";
writes str(f);
writes " is ";
writes str(ifact(f));
